{
	"compilerOptions": {
		"module": "commonjs",
		"target": "esnext",
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"allowJs": true,
		"lib": ["dom", "es6"],
		"baseUrl": "./src",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"paths": {
			"@/*": ["./*"]
		}
	},
	"exclude": ["node_modules", "dist"]
}
